#!/usr/bin/env node
require('js-yaml');
require('mochiscript');

var upbeat  = require('../lib/upbeat');

if (process.argv.length <= 2) {
  console.log("Upbeat 0.2.0");
  console.log("USAGE: upbeat <config file>");
  process.exit(0);
}

var file = process.argv[process.argv.length-1];
if (! file.match(/^\//)) file = process.cwd() + '/' + file;

var server = new upbeat.Server(require(file)[0]);
server.start();
server.listen();
